{
    "private": true,
    "scripts": {
        "build": "webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
        "dev": "cross-env NODE_ENV=development npm run build -- ",
        "prod": "cross-env NODE_ENV=production npm run build --",
        "watch": "npm run dev -- --watch",
        "watch-poll": "npm run watch -- --watch-poll",
        "prettier": "npm run prettier . --write",
        "docker-test": "docker-compose run -v $(pwd)/runtime/results:/tmp/results php bash",
        "test": "npm run test -- -c \"WAIT_HOSTS=mysqldb:3306 /wait && php artisan test --log-junit /tmp/results/results.xml\"",
        "test-coverage": "npm run test -- -c \"WAIT_HOSTS=mysqldb:3306 /wait && phpdbg -qrr vendor/bin/phpunit --coverage-html /tmp/results/coverage-report-html --coverage-clover /tmp/results/coverage-report-clover/clover.xml\""
    },
    "devDependencies": {
        "@inertiajs/inertia-vue": "^0.1.2",
        "@inertiajs/inertia": "^0.1.7",
        "@prettier/plugin-php": "^0.14.2",
        "axios": "^0.19",
        "bootstrap-vue": "^2.3.0",
        "clipboard": "^2.0.6",
        "collect.js": "^4.22.0",
        "cross-env": "^7.0",
        "js-base64": "^2.5.2",
        "laravel-mix": "^5.0.1",
        "lodash": "^4.17.13",
        "noty": "^3.2.0-beta",
        "prettier": "^2.0.5",
        "resolve-url-loader": "^3.1.0",
        "sass-loader": "^8.0.0",
        "sass": "^1.15.2",
        "string": "^3.3.3",
        "tabler-icons": "^1.4.0",
        "tabler": "^1.0.0-alpha.6",
        "vue-apexcharts": "^1.5.3",
        "vue-json-pretty": "^1.6.3",
        "vue-meta": "^2.3.1",
        "vue-template-compiler": "^2.6.11",
        "vue": "^2.6.11"
    }
}
